<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="125dp"
        android:src="@drawable/logo">

    </ImageView>


    <ImageView
        android:id="@+id/imgPrincipal"
        android:layout_width="220dp"
        android:layout_height="219dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="96dp"
        android:src="@drawable/imagen">

    </ImageView>

    <TextView
        android:id="@+id/txt_bienvenido"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="347dp"
        android:fontFamily="@font/bebasneue"
        android:text="BIENVENIDO ESPECIALISTA"
        android:textAlignment="center"
        android:textColor="#5492FD"
        android:textSize="40dp"/>


    <EditText
        android:id="@+id/et_user"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="294dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="253dp"
        android:background="@drawable/edt_desing"
        android:drawableLeft="@drawable/ic_usets"
        android:elevation="3dp"
        android:ems="10"
        android:hint="Dirección de email"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:text="" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="294dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="179dp"
        android:background="@drawable/edt_desing"
        android:drawableLeft="@drawable/ic_lock"
        android:elevation="3dp"
        android:ems="10"
        android:hint="Tu contraseña"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:text="" />


    <Button
        android:id="@+id/btn_iniciar_sesion"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="44dp"
        android:layout_marginTop="660dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="94dp"
        android:background="@drawable/boton_one"
        android:text="INICIAR SESIÓN"
        android:textSize="20dp"
        android:textColor="#FFF" />


    <TextView
        android:id="@+id/txt_olvido_clave"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="41dp"
        android:text="¿Olvidaste tu contraseña?"
        android:textAlignment="center"
        android:textColor="#C4C4C4"
        android:textSize="20dp" />


</RelativeLayout>