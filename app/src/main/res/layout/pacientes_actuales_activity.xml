<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PacientesActualesActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="125dp"
        android:src="@drawable/logo">

    </ImageView>


    <TextView
        android:id="@+id/txt_bienvenido"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="590dp"
        android:fontFamily="@font/bebasneue"
        android:text="PACIENTES ACTUALES"
        android:textAlignment="center"
        android:textColor="#5492FD"
        android:textSize="40dp" />


    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="387dp"
        android:layout_height="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="565dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recPacientesActuales"
        android:layout_width="match_parent"
        android:layout_height="562dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-7dp"
        tools:listitem="@layout/paciente_actual_model">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>